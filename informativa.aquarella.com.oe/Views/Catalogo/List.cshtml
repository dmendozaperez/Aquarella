

@using informativa.aquarella.com.oe.Models
@model IEnumerable<Ent_Catalogo>
<table class="table table-hover dataTable  table-striped table-responsive">
    <thead>
        <tr style="background-color:#3d566e; color:#ecf0f1">
            <th style="text-align:center" >Id</th>
            <th style="text-align:center" >Titulo</th>
            <th style="text-align:center" >Descripcion</th>
            <th style="text-align:center" >Nro. Pag.</th>
            <th style="text-align:center" >Orden</th>
            <th style="text-align:center">Activo</th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody data-bind="foreach:">

        @foreach (Ent_Catalogo item in Model)
        {
            <tr>
                <td>@item.Catalogo_Id.ToString()</td>
                <td>@item.Catalogo_Titulo.ToString()</td>
                <td>@item.Catalogo_Descripcion.ToString()</td>
                <td>@item.Catalogo_strNroPag.ToString()</td>
                <td align="center">
                    <div style="width:100px">
                        <input id="txtOrden_@item.Catalogo_Id.ToString()" name ="orden" style="text-align:center" type="number" value="@item.Catologo_Orden" autofocus class="form-control" />
                    </div>
                </td>
                <td>
                    <input id="chkEstado_@item.Catalogo_Id.ToString()" @item.Catalogo_chkEstado type="checkbox"   name="chkEstado">
                @*@item.Catalogo_Estado.ToString()*@
                
                </td>
                <td>
                    
                    <div >
                       <a onclick="javascript:Editar(@item.Catalogo_Id);"><i class="fa fa-edit fa-2x"></i></a>
                   </div>
                </td>
            </tr>

        }
    </tbody>
    @if (Model.Count() != 0)
    {
        <tfoot>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>Nro. Pag.</th>
                <th>Orden</th>
                <th>Activo</th>
                <th>
                </th>
            </tr>
        </tfoot>
    }
</table>

<script src="~/assets/js/jquery-1.11.1.min.js"></script>
<script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
<script src="@Url.Content("~/assets/bootstrap/js/bootstrap.min.js")"></script>
