@model informativa.aquarella.com.oe.Models.LoginModel
@{
    Layout = null;
    Layout = "~/Views/Shared/_LayoutMantenedor.cshtml";
}

@section Scripts
{
    <script type="text/javascript">

        function InvalidMsg(textbox,str) {

            if (textbox.value.length == 0) {
                textbox.setCustomValidity(str);
            }
            else {
                    textbox.setCustomValidity('');
            }
            return true;
        }
    </script>
}
<link href="~/Content/AdminLTE.min.css" rel="stylesheet" />
<div class="page-title-containerM">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 wow fadeIn">
                <i class="fa fa-user"></i>
                <h1>Acceso al Sistema./</h1>
                <p>Ingrese usuario y contraseña para iniciar sesión.</p>
            </div>
            

        </div>
    </div>
</div>
<section class="content">
    <div class="row">
        <div class="login-box">
            <table width="100%" cellpadding="4" cellspacing="4">
                <tbody>
                    <tr>
                        <td align="center">

                            <table cellpadding="4" cellspacing="4" style="border-collapse: collapse; border: 1px solid silver;">
                                <tbody>
                                    <tr>
                                        <td align="center" style="color: White; background-color: #333;">
                                            <h2>
                                                Iniciar sesión
                                            </h2>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="login-box-body">
                                                @using (Html.BeginForm("Index", "Login", new { returnUrl = Model.returnUrl }, FormMethod.Post, new { @class = "login-box-body" }))
                                                {
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group has-feedback">
                                                    <input type="text" class="form-control" name="Usuario" placeholder="Usuario" autofocus oninvalid="InvalidMsg(this,'Ingrese el usuario')" required="required">
                                                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                                                </div>
                                                <div class="form-group has-feedback">
                                                    <input type="password" class="form-control" name="Password" placeholder="Password" oninvalid="InvalidMsg(this, 'Ingrese el password')" required="required">
                                                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                                </div>
                                                <div class="row">
                                                    <div class="col-xs-8">
                                                        <div class="checkbox icheck">
                                                            <label>
                                                                <input type="checkbox" id="Recordar" name="Recordar" value="true" @(Model.Recordar ? "checked=\"checked\"" : "")> Recordármelo la próxima vez
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <!-- /.col -->
                                                    <div class="col-xs-4">
                                                        @*<button type="submit" class="btn btn-primary btn-block btn-flat">Ingresar</button>*@
                                                        <input type="submit"  id="result" value="Ingresar" class="btn btn-primary">
                                                    </div>
                                                    <!-- /.col -->
                                                </div>
                                                <a href="#">¿Ha olvidado la contraseña?</a><br>
                                                }
                                            </div>
                                            <!-- /.login-box-body -->
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </td>
                    </tr>
                </tbody>
            </table>




        </div>
    </div>
</section>