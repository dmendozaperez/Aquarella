                                        <DataGridTemplateColumn Visibility="Collapsed">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Image Source="{Binding articulo_foto}" Visibility="Collapsed"
