            <dxga:LinearGaugeControl Background="#FFECEAE2" HorizontalAlignment="Left"  Grid.Row="1"  VerticalAlignment="Top" Height="1" Margin="113,182,0,0" Width="102" RenderTransformOrigin="0.5,0.5">
